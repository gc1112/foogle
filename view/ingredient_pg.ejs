<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet"> 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Document</title>
</head>

<body>
  <%- include ('partial/nav') %>
    <div class="container">
      <br>
      <div class="header">
        <%= data[0].r_name %>
      </div>
      <br>
      <div>
        <div class="text">ingredients:</div>
        <% for (let i=0; i < data.length; i++) {%>
          <div class="txt">
            <%= data[i].i_name %>
          </div>
          <%} %>
      </div>
      <br>
      <div class="text">steps:</div>
      <div>
        <% for (let i=0; i < step.length; i++) {%>
          <div class="txt">step<%= i %>: <%=step[i]%>
          </div>
          <%} %>
      </div>
      <form action="/search-adv" method="post" class="container" >
        <input type="text" class="col-6" name="loc" placeholder="which market are you going to?">
        <input type="hidden" name="ingredient" value="<% for (let i=0; i < data.length; i++){%><%= data[i].i_name %>,<%} %>">
        <div>
          <input type="submit" value="Submit" />
        </div>
      </form>

    </div>

</body>

</html>