<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <link href="/style.css" rel="stylesheet">
</head>

<body>
  <%-include ('partial/nav') %>
    <div class="container">
      <br>
      <div class="header">
        Market Item Index
      </div>
      <br>
      <table class="table table-hover small text-center">
        <thead>
          <tr>
            <th width="50">name</th>
            <th width="100">description</th>
            <th width="100">step</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < data.length; i++) { %>
            <tr>
              <td>
                <%= data[i].name %>
              </td>
              <td>
                <%= data[i].description %>
              </td>
              <td>
                <%= data[i].step %>
              </td>
              <td>
                <form action="/recipe_edit/<%=data[i].id%>" method="get" class="gy-3">
                  <input type="submit" value="edit" />
                </form>
              </td>
              <td>
                <form action="/recipe_del/<%=data[i].id%>" method="post" class="gy-3">
                  <input type="submit" value="delete" onclick="return confirm('are you sure to delete?')"/>
                </form>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>
</body>

</html>